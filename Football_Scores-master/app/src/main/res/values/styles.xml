<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>


    <style name="team_crest_style">
        <item name="android:layout_height">@dimen/team_crest_height</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/margin_8dp</item>
        <item name="android:src">@drawable/ic_launcher</item>
    </style>


    <style name="team_name_text_style">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">@dimen/TeamNames</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
